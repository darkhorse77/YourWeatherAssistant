<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="YourWeatherAssistant.View.MainPage">
    <ContentPage.Content>
        <StackLayout BackgroundColor="#6DAAD9">
            <Label Text="{Binding CurrentCity}" FontSize="10" TextColor="White" HorizontalOptions="Center" Margin="0, 30, 0, 10"/>
            <Label Text="{Binding Region}" FontSize="8" TextColor="White" HorizontalOptions="Center" Margin="0, 0, 0, 100"/>

            <Label Text="{Binding Temperature}" FontSize="38" TextColor="White" HorizontalOptions="Center"/>
            <Label Text="{Binding WeatherText}" FontSize="24" TextColor="White" HorizontalOptions="Center"/>
            <!--<Label Text="{Binding PrecipitationType}" FontSize="18" TextColor="White" HorizontalOptions="Center"/>-->
        </StackLayout>
    </ContentPage.Content>
</ContentPage>