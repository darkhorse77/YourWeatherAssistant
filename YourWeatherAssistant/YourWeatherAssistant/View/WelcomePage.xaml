<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="YourWeatherAssistant.WelcomePage"
             NavigationPage.HasNavigationBar="False">
    
    <ContentPage.Content>
        <StackLayout Padding="10">
            <Label Text="Привет!"
                HorizontalOptions="CenterAndExpand" FontSize="Large" Margin="20, 0, 30, 0" />
            <Label Text="Я ваш персональный погодный ассистент. Каждое утро вы будете получать рекомендации о том, брать ли зонтик или нет."
                HorizontalOptions="CenterAndExpand" FontSize="14" HorizontalTextAlignment="Center"/>
            <Label Text="Ваш город:" VerticalOptions="Center"
                HorizontalOptions="CenterAndExpand" FontSize="14" Margin="0, 100, 0, 0" />
            <Entry x:Name="cityEntry" Text="Лабытнанги"/>
            <Button x:Name="button" Text="Вперёд!" VerticalOptions="EndAndExpand" Clicked="Button_Clicked"/>
        </StackLayout>
    </ContentPage.Content>
    
</ContentPage>